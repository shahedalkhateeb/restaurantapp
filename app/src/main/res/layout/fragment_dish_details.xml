<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detailDishImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/detailDishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الطبق"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/detailDishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₪12.99"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/detailDishCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الفئة: مشاوي"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnAddToCartDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إضافة إلى السلة"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
